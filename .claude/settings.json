{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(git add:*)",
      "Bash(git commit -m:*)",
      "Bash(gh issue create:*)",
      "Bash(gh label:*)",
      "Bash(gh api:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(npm run:*)",
      "Bash(npm run test:*)",
      "Bash(npm run build:*)",
      "Bash(aws s3 cp:*)",
      "Bash(aws logs get-log-events:*)",
      "Bash(aws logs describe-log-streams:*)",
      "Bash(similarity-ts:*)",
      "WebFetch(domain:docs.dify.ai)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.aws.amazon.com)",
      "mcp__playwright__browser_console_messages",
      "mcp__playwright__browser_type",
      "mcp__playwright__browser_tab_list",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_close",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_wait_for",
      "mcp__playwright__browser_snapshot",
      "mcp__aws-documentation-mcp-server__search_documentation",
      "mcp__aws-documentation-mcp-server__read_documentation",
      "mcp__awslabs_aws-documentation-mcp-server__search_documentation",
      "mcp__awslabs_aws-documentation-mcp-server__read_documentation",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "mcp__serena__initial_instructions",
      "mcp__serena__check_onboarding_performed",
      "mcp__serena__onboarding",
      "mcp__serena__list_dir",
      "mcp__serena__search_for_pattern",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__find_symbol",
      "mcp__serena__write_memory",
      "mcp__serena__think_about_collected_information",
      "mcp__serena__find_referencing_symbols",
      "mcp__serena__replace_regex",
      "mcp__serena__read_memory",
      "mcp__serena__find_file",
      "mcp__serena__list_memories"
    ],
    "deny": []
  },
  "enabledMcpjsonServers": [
    "playwright",
    "awslabs.aws-documentation-mcp-server"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".js\") or endswith(\".ts\") or endswith(\".jsx\") or endswith(\".tsx\"))' | xargs -r npm run lint"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Waiting for your response...' -sound default"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Waiting for your response...' -sound default"
          }
        ]
      }
    ]
  }
}
